{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended", 
    "next", 
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "react/prop-types": 0,
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "arrowParent": "always",
        "endOfLine": "lf",
        "trailingComma": "none",
        "tabWidth": 2,
        "printWith": 120,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": false,
        "useTabs": false,
        "plugins": [
          "prettier-plugin-svelte",
          "prettier-plugin-organize-imports",
          "prettier-plugin-tailwindcss"
        ],
        "pluginSearchDirs": false
      }
    ]
  }
}